@model IEnumerable<ABCRetails.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="display-6 text-primary">
        <i class="fas fa-box me-2"></i>@ViewData["Title"]
    </h1>
    <a asp-action="Create" class="btn btn-primary">
        <i class="fas fa-plus-circle me-2"></i>Add New Product
    </a>
</div>

<div class="row">
    @if (Model.Any())
    {
        foreach (var item in Model)
        {
            <div class="col-xl-3 col-lg-4 col-md-6 col-sm-6 mb-4">
                <div class="card h-100 shadow-sm product-card">
                    <div class="product-image-container">
                        @if (!string.IsNullOrEmpty(item.ImageUrl))
                        {
                            <img src="@item.ImageUrl"
                                 alt="@item.ProductName"
                                 class="card-img-top product-img-fit" />
                        }
                        else
                        {
                            <div class="card-img-top product-image-placeholder d-flex align-items-center justify-content-center">
                                <i class="fas fa-image fa-3x text-muted"></i>
                            </div>
                        }
                        <span class="product-stock-badge @(item.StockAvailable > 10 ? "bg-success" : item.StockAvailable > 0 ? "bg-warning" : "bg-danger")">
                            @item.StockAvailable in stock
                        </span>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title text-truncate">@item.ProductName</h5>
                        <p class="card-text text-muted small mb-2">
                            @(item.Description.Length > 100 ? item.Description.Substring(0, 100) + "..." : item.Description)
                        </p>
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <span class="h5 text-success mb-0">@item.Price.ToString("C")</span>
                        </div>
                    </div>
                    <div class="card-footer bg-transparent">
                        <div class="btn-group w-100" role="group">
                            <a asp-action="Edit" asp-route-id="@item.RowKey"
                               class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-edit me-1"></i>Edit
                            </a>
                            <form asp-action="Delete" method="post" class="d-inline">
                                <input type="hidden" name="id" value="@item.RowKey" />
                                <button type="submit" class="btn btn-outline-danger btn-sm"
                                        onclick="return confirm('Are you sure you want to delete this product?')">
                                    <i class="fas fa-trash me-1"></i>Delete
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <div class="text-center py-5">
                <i class="fas fa-box fa-4x text-muted mb-3"></i>
                <h4 class="text-muted">No Products Found</h4>
                <p class="text-muted">Get started by adding your first product.</p>
                <a asp-action="Create" class="btn btn-primary mt-2">
                    <i class="fas fa-plus-circle me-2"></i>Add Product
                </a>
            </div>
        </div>
    }
</div>

<!-- Add this CSS -->
<style>
    .product-img-fit {
        width: 100%;
        height: 250px; /* keeps cards consistent */
        object-fit: contain; /* ensures entire image fits */
        background-color: #f8f9fa;
        padding: 5px;
    }

    .product-image-container {
        position: relative;
    }

    .product-stock-badge {
        position: absolute;
        top: 10px;
        right: 10px;
        padding: 0.3rem 0.6rem;
        border-radius: 0.5rem;
        font-size: 0.8rem;
        color: #fff;
    }
</style>


@section Styles {
    <style>
        .product-card {
            border: none;
            border-radius: 1rem;
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }

            .product-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
            }

        .product-image-container {
            position: relative;
            height: 200px;
            overflow: hidden;
        }

        .product-image {
            height: 100%;
            object-fit: cover;
            transition: transform 0.3s ease;
        }

        .product-card:hover .product-image {
            transform: scale(1.05);
        }

        .product-image-placeholder {
            height: 200px;
            background-color: #f8f9fa;
        }

        .product-stock-badge {
            position: absolute;
            top: 10px;
            right: 10px;
            padding: 0.5rem 0.75rem;
            border-radius: 0.5rem;
            font-size: 0.75rem;
            font-weight: 600;
            color: white;
        }

        .card-title {
            color: #2c3e50;
            font-weight: 600;
        }

        .btn-group .btn {
            border-radius: 0.5rem;
            margin: 0 2px;
        }
    </style>
}